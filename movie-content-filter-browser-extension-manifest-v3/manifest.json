{
    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "homepage_url": "https://github.com/jacob-willden/movie-content-filter-extension",
    "version": "0.0.0.1",
    "manifest_version": 3,
    "default_locale": "en",
    "permissions": ["storage", "scripting"],
    "host_permissions": [
        "https://*.netflix.com/watch/*", 
        "https://*.disneyplus.com/video/*",
        "https://tv.apple.com/*",
        "https://*.hulu.com/watch/*",
        "https://*.plex.tv/*",
        "https://*.pluto.tv/",
        "https://*.hbomax.com/*",
        "https://*.amazon.com/*",
        "https://*.amazon.com.br/*",
        "https://*.amazon.ca/*",
        "https://*.amazon.com.mx/*",
        "https://*.amazon.in/*",
        "https://*.amazon.co.jp/*",
        "https://*.amazon.sg/*",
        "https://*.amazon.com.tr/*",
        "https://*.amazon.ae/*",
        "https://*.amazon.fr/*",
        "https://*.amazon.de/*",
        "https://*.amazon.it/*",
        "https://*.amazon.nl/*",
        "https://*.amazon.es/*",
        "https://*.amazon.se/*",
        "https://*.amazon.co.uk/*",
        "https://*.amazon.com.au/*"
    ],
    "background": {"service_worker": "background.js"},
    "content_scripts": [{
        "all_frames": true, 
        "js": ["utilities.js", "content.js"],
        "matches": [
            "https://*.netflix.com/watch/*", 
            "https://*.disneyplus.com/video/*",
            "https://tv.apple.com/*",
            "https://*.hulu.com/watch/*",
            "https://*.plex.tv/*",
            "https://*.pluto.tv/",
            "https://*.hbomax.com/*",
            "https://*.amazon.com/*", 
            "https://*.amazon.com.br/*",
            "https://*.amazon.ca/*",
            "https://*.amazon.com.mx/*",
            "https://*.amazon.in/*",
            "https://*.amazon.co.jp/*",
            "https://*.amazon.sg/*",
            "https://*.amazon.com.tr/*",
            "https://*.amazon.ae/*",
            "https://*.amazon.fr/*",
            "https://*.amazon.de/*",
            "https://*.amazon.it/*",
            "https://*.amazon.nl/*",
            "https://*.amazon.es/*",
            "https://*.amazon.se/*",
            "https://*.amazon.co.uk/*",
            "https://*.amazon.com.au/*"
        ]
    }],
    "action": {"default_popup": "popup.html"},
    "web_accessible_resources": [{
        "resources": ["sample-filter-file.json"],
        "matches": [
            "https://*.netflix.com/*", 
            "https://*.disneyplus.com/*",
            "https://tv.apple.com/*",
            "https://*.hulu.com/*",
            "https://*.plex.tv/*",
            "https://*.pluto.tv/*",
            "https://*.hbomax.com/*",
            "https://*.amazon.com/*", 
            "https://*.amazon.com.br/*",
            "https://*.amazon.ca/*",
            "https://*.amazon.com.mx/*",
            "https://*.amazon.in/*",
            "https://*.amazon.co.jp/*",
            "https://*.amazon.sg/*",
            "https://*.amazon.com.tr/*",
            "https://*.amazon.ae/*",
            "https://*.amazon.fr/*",
            "https://*.amazon.de/*",
            "https://*.amazon.it/*",
            "https://*.amazon.nl/*",
            "https://*.amazon.es/*",
            "https://*.amazon.se/*",
            "https://*.amazon.co.uk/*",
            "https://*.amazon.com.au/*"
        ]
    }]
}