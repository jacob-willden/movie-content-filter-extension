{
    "name": "Movie Content Filter",
    "version": "0.0.0.1",
    "manifest_version": 2,
    "permissions": [
        "storage",
        "webNavigation",
        "https://*.netflix.com/watch/*", 
        "https://*.disneyplus.com/video/*",
        "https://tv.apple.com/*",
        "https://www.imdb.com/tv/*",
        "https://www.hulu.com/*",
        "https://*.amazon.com/*", 
        "https://*.amazon.com.br/*",
        "https://*.amazon.ca/*",
        "https://*.amazon.com.mx/*",
        "https://*.amazon.in/*",
        "https://*.amazon.co.jp/*",
        "https://*.amazon.sg/*",
        "https://*.amazon.com.tr/*",
        "https://*.amazon.ae/*",
        "https://*.amazon.fr/*",
        "https://*.amazon.de/*",
        "https://*.amazon.it/*",
        "https://*.amazon.nl/*",
        "https://*.amazon.es/*",
        "https://*.amazon.se/*",
        "https://*.amazon.co.uk/*",
        "https://*.amazon.com.au/*"
    ],
    "background": {"scripts": ["background.js"], "persistent": false},
    "content_scripts": [{
        "all_frames": true, 
        "js": ["content.js"],
        "matches": [
            "https://*.netflix.com/watch/*", 
            "https://*.disneyplus.com/video/*",
            "https://tv.apple.com/*",
            "https://www.imdb.com/tv/*",
            "https://www.hulu.com/*",
            "https://*.amazon.com/*", 
            "https://*.amazon.com.br/*",
            "https://*.amazon.ca/*",
            "https://*.amazon.com.mx/*",
            "https://*.amazon.in/*",
            "https://*.amazon.co.jp/*",
            "https://*.amazon.sg/*",
            "https://*.amazon.com.tr/*",
            "https://*.amazon.ae/*",
            "https://*.amazon.fr/*",
            "https://*.amazon.de/*",
            "https://*.amazon.it/*",
            "https://*.amazon.nl/*",
            "https://*.amazon.es/*",
            "https://*.amazon.se/*",
            "https://*.amazon.co.uk/*",
            "https://*.amazon.com.au/*"
        ]
    }],
    "browser_action": {
        "default_popup": "popup.html"
    }
}